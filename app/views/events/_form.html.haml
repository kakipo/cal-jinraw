= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :start_at
    = f.datetime_select :start_at
  .field
    = f.label :end_at
    = f.datetime_select :end_at
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :place
    = f.text_field :place
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :price
    = f.number_field :price
  .field
    = f.label :capacity
    = f.number_field :capacity
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
